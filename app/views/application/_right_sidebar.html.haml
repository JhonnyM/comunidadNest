#right-sidebar
	.opciones-perfil
		%h3 MIS PERFILES
		-if user_signed_in?
			-if current_user.profesional.present?
				%p
					= image_tag current_user.profesional.avatar.url(:medium), class: 'mini-profile-pic', :size => '20x20'
					=link_to "#{current_user.nombre}", profesional_path(current_user.profesional)
			-else
				%p
					=link_to "Profesional", new_profesional_path, class: "btn btn-purple btn-profesional"
			-if current_user.empresas.present?
				-current_user.empresas.each  do |empresa|
					%p
						= image_tag empresa.avatar.url(:medium), class: 'mini-profile-pic', :size => '20x20'
						=link_to "#{empresa.nombre}", empresa_path(empresa)
			-else
				%p
					=link_to "Empresa", new_empresa_path, class: "btn btn-blue btn-empresa"
		-else
			%p
				=link_to "Profesional", new_profesional_path, class: "btn btn-purple btn-profesional"
			%p
				=link_to "Empresa", new_empresa_path, class: "btn btn-blue btn-empresa"

