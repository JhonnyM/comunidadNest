- content_for :full_width_header do
  - render :partial => 'slider'
- content_for :searchbar do
  - render :partial => 'searchbar'
- content_for :content do
  .row
    .col-xs-12.col-md-7.col-lg-9
      %h2 Profesionales
      .row
        =render partial: "profesionales/profesional", collection: @profesionales, layout: "layouts/nest_object"

      %h2 Empresas
      .row
        =render partial: "empresas/empresa", collection: @empresas, layout: "layouts/nest_object"

      %h2 Blog
      .row
        .grid
          .grid-sizer
          =render partial: "blog/post", collection: @posts

    .col-xs-12.col-md-5.col-lg-3
      =render partial: "application/right_sidebar"
