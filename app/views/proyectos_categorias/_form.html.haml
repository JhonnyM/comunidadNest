= form_for @proyectos_categoria do |f|
  - if @proyectos_categoria.errors.any?
    #error_explanation
      %h2= "#{pluralize(@proyectos_categoria.errors.count, "error")} prohibited this proyectos_categoria from being saved:"
      %ul
        - @proyectos_categoria.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
