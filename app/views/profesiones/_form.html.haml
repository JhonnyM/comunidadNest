= form_for @profesion do |f|
  - if @profesion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profesion.errors.count, "error")} prohibited this profesion from being saved:"
      %ul
        - @profesion.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :generico
    = f.text_field :generico
  .field
    = f.label :masculino
    = f.text_field :masculino
  .field
    = f.label :femenino
    = f.text_field :femenino
  .actions
    = f.submit 'Save'
